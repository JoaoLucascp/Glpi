{
    "name": "joaolucas/glpi-newbase",
    "description": "Complete Personal Data Management System for GLPI with company management, phone systems, tasks with geolocation, digital signature and mileage calculation",
    "type": "glpi-plugin",
    "keywords": [
        "glpi",
        "plugin",
        "personal-data",
        "company-management",
        "geolocation",
        "digital-signature",
        "mileage-calculation",
        "ipbx",
        "chatbot"
    ],
    "homepage": "https://github.com/JoaoLucascp/Glpi",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "JoÃ£o Lucas",
            "email": "joao.lucas@newtel.com.br",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/JoaoLucascp/Glpi/issues",
        "source": "https://github.com/JoaoLucascp/Glpi"
    },
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-curl": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "GlpiPlugin\\\\Newbase\\\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.3"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --colors=always",
        "cs:check": "phpcs -p --standard=PSR12 --extensions=php --ignore=vendor src/ front/ ajax/",
        "cs:fix": "phpcbf -p --standard=PSR12 --extensions=php --ignore=vendor src/ front/ ajax/",
        "analyse": "phpstan analyse --level=5 src/ front/ ajax/"
    },
    "extra": {
        "glpi": {
            "version": "2.1.0",
            "min_glpi": "10.0.20",
            "max_glpi": "10.0.99",
            "directory": "newbase"
        }
    }
}